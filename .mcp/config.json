{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": [
        "-y",
        "claude-flow@alpha",
        "mcp",
        "serve"
      ],
      "env": {
        "CLAUDE_API_KEY": "${CLAUDE_API_KEY}",
        "CLAUDE_FLOW_LOG_LEVEL": "info",
        "CLAUDE_FLOW_MCP_TRANSPORT": "stdio"
      },
      "capabilities": {
        "tools": true,
        "prompts": false,
        "resources": false
      }
    }
  }
}